<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
    tools:context=".MainActivity">

    <com.me.optionbarview.OptionBarView
        android:id="@+id/opv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:left_src="@mipmap/ic_launcher_round"
        app:left_src_width="24dp"
        app:left_src_height="24dp"
        app:left_text="leftText"
        app:title="title"
        app:right_text="rightText"
        />

    <com.me.layouts.PercentLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:widthPercent="100%"
        app:heightPercent="100%">

    <TextView
        per
        android:background="@color/cardview_dark_background"/>
    </com.me.layouts.PercentLayout>

</androidx.constraintlayout.widget.ConstraintLayout>